{% extends '@AcMarcheIcar/layout.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css"/>
{% endblock %}

{% block body %}

    <div class="card">
        <h3 class="card-header">Situation de <strong>{{ nom }}</strong> sur base d'un rectangle </h3>
        <div class="card-body">

            <table class="table table-bordered">
                <tr>
                    <th>Point 1</th>
                    <td>{{ point1.x }}, {{ point1.y }}</td>
                </tr>
                <tr>
                    <th>Point 2</th>
                    <td>{{ point2.x }}, {{ point2.y }}</td>
                </tr>
            </table>

            <div id='openmap' style='width: 100%; height: 800px;' class="border border-primary mt-3">
            </div>
            <div {{ stimulus_controller('mapicar', {'point1': point1, 'point2':point2, 'drop': false}) }}>

            </div>

        </div>
        <div class="card-footer">
            {% include '@AcMarcheIcar/_urlexecuted.html.twig' %}
        </div>

    </div>

{% endblock %}